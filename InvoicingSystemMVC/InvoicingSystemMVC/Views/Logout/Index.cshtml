@model InvoicingSystemMVC.Models.ViewModels.LogoutContribuyenteViewModel
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Are you sure you want to log out?</h2>
                    <h3 class="card-subtitle mb-3">@Model.Contribuyente.RFC</h3>
                    <form asp-action="Index" method="post">
                        <div class="text-center">
                            <button class="btn btn-danger btn-lg" type="submit">Log Out</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
